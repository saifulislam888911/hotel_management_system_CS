        <TextBox x:Name="status" HorizontalAlignment="Left" Height="23" Margin="138,181,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.513,1.391"/>
        <Button x:Name="book" Content="Book Room" HorizontalAlignment="Left" Margin="566,49,0,0" VerticalAlignment="Top" Width="93" Height="38" Click="edit_room_click"/>
        <DataGrid HorizontalAlignment="Left" Height="270" Margin="49,222,0,0" VerticalAlignment="Top" Width="698"/>

